@top File { (CompentDef)* }
@skip { space }

CompentDef { "component" ident "(" "props" "," "child" ")"  Block }
Block {"{" RenderStmt* "}"}
RenderStmt { kw<"render"> "(" "<div></div>" ")" }
StateStmt {kw<"state"> ident "=" Expr}
Expr {number | string}

kw<term> { @specialize[@name={term}]<ident, term> }

@tokens {
  "(" ")"
  "props"
  ","
  "child"
  "="
  ident { $[A-Za-z_]+ }
  number { $[0-9]+ }
  string { '"' !["]* '"' }
  space { $[ \t\n\r]+ }
  "<div></div>"
}